doctype html
html
	head
		title Simple ToDo List
		link(href="https://fonts.googleapis.com/css?family=Titillium+Web:900" rel="stylesheet")
		style
			include style.css
	body
		div(class='todo_wrapper')
			span(class='header') TODAY
			span(class='subheader') I will accomplish...

			div(class='newTask')
				form(method='post', action='/todo')
					input(
						name='task'
						class='txtNewTask'
					)

					input(
						class='button'
						name='btnSubmit'
						type='submit'
						value="Add Task"
					)

			div(class='notes')
					each row in pageData
						div(class='row') 
							input(
								type="checkbox"
								name="#{row._id}"
								checked=(row.completed == 'true')
							) 
							span #{row.task}

		script(src='https://code.jquery.com/jquery-2.2.4.min.js')
		script(src='/todo/script.js')

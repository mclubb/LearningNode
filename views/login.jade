html
	head
		link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet')
	body
		div.container
			div.row
				div.col-sm-6.col-md-4.col-md-offset-4
					h1.text-center.login-title Sign in to our Passport app
				div.account-wall
					img(class='profile-img', src='https://p931z2nb6eo1jytzj2ufrzyoiz-wpengine.netdna-ssl.com/education/wp-content/uploads/sites/38/2011/06/facebook_blank_face3.jpeg' width='256')
					form(class='form-signin', action='/login', method='POST')
						input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
						input(type='password', name='password' class='form-control', placeholder='Password', required)
						input(class='btn btn-lg btn-primary btn-block', type='submit') 
				span.clearfix
				a(href='/signup', class='text-center new-account') Create an account
				#message
				if message
					h1.text-center.error-message #{message}

